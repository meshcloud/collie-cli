{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/FoundationConfig",
  "definitions": {
    "FoundationConfig": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "meshStack": {
          "$ref": "#/definitions/MeshStackConfig"
        },
        "platforms": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/PlatformConfig"
          }
        }
      },
      "required": ["name", "platforms"]
    },
    "FoundationFrontmatter": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "meshStack": {
          "$ref": "#/definitions/MeshStackConfig"
        }
      },
      "required": ["name"]
    },
    "MeshStackConfig": {
      "type": "object",
      "properties": {
        "apiUrl": {
          "type": "string"
        },
        "credentialsFile": {
          "type": "string"
        }
      },
      "required": ["apiUrl", "credentialsFile"]
    },
    "PlatformConfig": {
      "oneOf": [
        {
          "$ref": "#/definitions/PlatformConfigAws"
        },
        {
          "$ref": "#/definitions/PlatformConfigGcp"
        },
        {
          "$ref": "#/definitions/PlatformConfigAzure"
        },
        {
          "$ref": "#/definitions/PlatformConfigCustom"
        }
      ]
    },
    "PlatformConfigAws": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "cli": {
          "$ref": "#/definitions/CliToolEnv"
        },
        "collie": {
          "$ref": "#/definitions/CollieConfig"
        },
        "aws": {
          "type": "object",
          "properties": {
            "accountId": {
              "type": "string"
            },
            "accountAccessRole": {
              "type": "string"
            }
          },
          "required": ["accountId", "accountAccessRole"]
        }
      },
      "required": ["aws", "name"]
    },
    "CliToolEnv": {
      "type": "object",
      "properties": {
        "az": {
          "$ref": "#/definitions/AzCliEnv"
        },
        "aws": {
          "$ref": "#/definitions/AwsCliEnv"
        },
        "gcloud": {
          "$ref": "#/definitions/GcloudCliEnv"
        }
      }
    },
    "AzCliEnv": {
      "type": "object",
      "properties": {
        "AZURE_CONFIG_DIR": {
          "type": "string"
        }
      }
    },
    "AwsCliEnv": {
      "type": "object",
      "properties": {
        "AWS_CONFIG_FILE": {
          "type": "string"
        },
        "AWS_PROFILE": {
          "type": "string"
        }
      },
      "required": ["AWS_PROFILE"]
    },
    "GcloudCliEnv": {
      "type": "object",
      "properties": {
        "CLOUDSDK_ACTIVE_CONFIG_NAME": {
          "type": "string"
        }
      },
      "required": ["CLOUDSDK_ACTIVE_CONFIG_NAME"]
    },
    "PlatformConfigGcp": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "cli": {
          "$ref": "#/definitions/CliToolEnv"
        },
        "collie": {
          "$ref": "#/definitions/CollieConfig"
        },
        "gcp": {
          "type": "object",
          "properties": {
            "organization": {
              "type": "string"
            },
            "project": {
              "type": "string"
            },
            "billingExport": {
              "type": "object",
              "properties": {
                "project": {
                  "type": "string"
                },
                "dataset": {
                  "type": "string"
                },
                "view": {
                  "type": "string"
                }
              },
              "required": ["project", "dataset", "view"]
            }
          },
          "required": ["organization", "project"]
        }
      },
      "required": ["gcp", "name"]
    },
    "PlatformConfigAzure": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "cli": {
          "$ref": "#/definitions/CliToolEnv"
        },
        "collie": {
          "$ref": "#/definitions/CollieConfig"
        },
        "azure": {
          "type": "object",
          "properties": {
            "aadTenantId": {
              "type": "string"
            },
            "subscriptionId": {
              "type": "string"
            }
          },
          "required": ["aadTenantId", "subscriptionId"]
        }
      },
      "required": ["azure", "name"]
    },
    "PlatformConfigCustom": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "cli": {
          "$ref": "#/definitions/CliToolEnv"
        },
        "collie": {
          "$ref": "#/definitions/CollieConfig"
        },
        "azure": {}
      }
   },
    "CollieConfig": {
      "type": "object",
      "properties": {
        "cache": {
          "$ref": "#/definitions/CollieCacheConfig"
        }
      }
    },
    "CollieCacheConfig": {
      "type": "object",
      "properties": {
        "maxAgeSeconds": {
          "type": "integer"
        }
      },
      "required": ["maxAgeSeconds"]
    },
    "KitModule": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "summary": {
          "type": "string"
        },
        "compliance": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/KitModuleComplianceStatement"
          }
        }
      },
      "required": ["name", "summary"]
    },
    "KitModuleComplianceStatement": {
      "type": "object",
      "properties": {
        "control": {
          "type": "string"
        },
        "statement": {
          "type": "string"
        }
      },
      "required": ["control", "statement"]
    },
    "ComplianceControl": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "summary": {
          "type": "string"
        },
        "link": {
          "type": "string"
        }
      },
      "required": ["name", "summary"]
    }
  }
}
